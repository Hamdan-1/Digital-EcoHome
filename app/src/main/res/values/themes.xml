<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DigitalEcoHome" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DigitalEcoHome.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DigitalEcoHome.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DigitalEcoHome.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- New theme for light mode -->
    <style name="Theme.DigitalEcoHome.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- New theme for SmartEnergyHomepage component -->
    <style name="Theme.SmartEnergyHomepage" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light_blue</item>
        <item name="colorPrimaryVariant">@color/card_darker_navy</item>
        <item name="colorOnPrimary">@color/text_very_light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light_green</item>
        <item name="colorSecondaryVariant">@color/border_dark_gray</item>
        <item name="colorOnSecondary">@color/text_very_light_gray</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/background_dark_navy</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/text_very_light_gray</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
